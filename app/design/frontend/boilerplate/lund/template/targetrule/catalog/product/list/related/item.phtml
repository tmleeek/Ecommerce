/** @var $this Enterprise_TargetRule_Block_Catalog_Product_Item */
$_item = $this->getItem();
$_helper = $this->helper('catalog/output');
if ($_item):
?>
<div class="product"> <a href="<?php echo $this->getProductUrl($_item) ?>" class="product-image"><img src="<?php echo $this->helper('catalog/image')->init($_item, 'small_image')->resize(276, 170) ?>" alt="<?php echo $this->escapeHtml($_item->getName()) ?>" title="<?php echo $this->escapeHtml($_item->getName()) ?>" /></a>
    <div class="product-details">
    
        <?php if ($_item->getData('brand')): ?>
			<?php if($_item->getResource()->getAttribute('brand')->getFrontend()->getValue($_item) == 'AVS'): ?>
	            <p><img src="<?php echo $this->getSkinUrl("images/avs-pro-logo.png") ?>" /></p>
            <?php elseif($_item->getResource()->getAttribute('brand')->getFrontend()->getValue($_item) == 'Lund'): ?>
	            <p><img src="<?php echo $this->getSkinUrl("images/lund-small-logo.png") ?>" /></p>
            <?php endif;?>
        <?php endif;?>
        <p><a href="<?php echo $_item->getProductUrl() ?>"><?php echo $this->escapeHtml($_item->getName()) ?></a></p>
        <div class="desc std"> <?php echo $_helper->productAttribute($_item, $_item->getShortDescription(), 'short_description') ?> </div>
        <ul class="add-to-links">
            <?php if($_compareUrl=$this->getAddToCompareUrl($_item)): ?>
            <li> <a href="<?php echo $_compareUrl ?>" class="link-compare"><?php echo $this->__('Compare') ?>
                <input name="" type="checkbox" value="" />
                </a></li>
            <?php endif; ?>
        </ul>
    </div>
</div>
<?php endif;?>
