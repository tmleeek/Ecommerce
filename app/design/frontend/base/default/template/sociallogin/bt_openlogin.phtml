	var	 top      = parseInt(screenY + ((outerHeight - height) / 2.5), 10);
	var	 features = (
			'width=' + width +
			',height=' + height +
			',left=' + left +
			',top=' + top
		  );

	newwindow=window.open('<?php echo $this->getSetBlock()?>','Login_by_MyOpenId',features);

	if (window.focus) {
		newwindow.focus()
	}
	return false;
}
</script>
